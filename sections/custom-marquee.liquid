
<style>
  a.ezfy-custom-link {
    text-decoration: none;
}
.image-banner-section{
    position: relative;
}

#shopify-section-header{
z-index: 4 !important;
}
.image-banner-section a.ezfy-custom-link{
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
}
</style>

<style>
  .custom-image-container {
	background: #F3F3F3;
}
.custom-instruction {
  color: black;
    text-transform: capitalize;
    font-weight: 500;
    font-size: 16px;
    line-height: 32px;
}

 .main_image {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 30px;
    padding-top: 7px;
}
  .newsletter-form__button.field__button {
	padding: 13px 15px !important;
}
 .main_image img {
	height: 20px;
	width: 20px;
	object-fit: cover;
}
  span.star_svg {
	width: 100px;
	height: 100px;
	display: flex;
	justify-content: center;
	align-items: center;
}
  .section-template--16658361778432__d6486280-5224-4739-8945-989021f65d31-padding {
     padding-top:unset !important; 
}
.custom-marquee{
  position: relative;
    width: 100vw;
    max-width: 100%;
    height: 43px;
    overflow-x: hidden;
    background: #90c053;
    color: #ffffff;
}
</style>

  <div class="custom-image-container">
    
  <marquee class="custom-marquee">
    <div class="wrap_ced_marquee" style="display:flex">
 {% for i in (1..200) -%}
    <div class="track">
      <div class="main_image ">

      {%- for block in section.blocks -%}
        {% if block.type == 'mainimage'%}

  
              {% if block.settings.custom_text %}
                          {% if block.settings.link != blank %}

<a class="ezfy-custom-link" 
   href="{{ block.settings.link }}" target="_self"
   >

                  <span class = "custom-instruction">{{ block.settings.custom_text }}</span>  </a>
              {% endif %}
                {% endif %}
              {% if block.settings.starimg %}
                <span Class="star_svg">
                  <img src ="{{ block.settings.starimg | img_url:'thumb' }}">
                  {% comment %}
                    <svg width="16" height="15" viewBox="0 0 16 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7.99994 0.366455L10.3174 5.06146L15.4999 5.81896L11.7499 9.47146L12.6349 14.6315L7.99994 12.194L3.36494 14.6315L4.24994 9.47146L0.499939 5.81896L5.68244 5.06146L7.99994 0.366455Z" fill="#1A1A1A"/></svg>
                  {% endcomment %}
                </span>
              {% endif %}
             {% endif %}

      {% endfor %}
      </div>
    </div>
    {%- endfor %}
            </div>
</marquee>
              
        </div>
{% schema %}
  {
    "name": "Star Image Section",
       "blocks": [
    {
                "type": "mainimage",
                "name": "Main Image",
                "limit": 8,
                "settings":
                [
                         {
      "type": "url",
      "id": "link",
      "label": "Banner Link"
    },
                  {
                    "type":"text",
                    "id":"custom_text",
                    "label":"Text "
                  },
                  {
                        "type": "image_picker",
                        "id": "starimg",
                        "label": " Upload Star Image"
                    }
                ]
  }],
  "presets": [
    {
      "name": "Morquie Image Section",
      "blocks": [
        {
          "type": "mainimage"
        }
      ]
    }
  ]}
{% endschema %}
